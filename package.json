{
  "name": "pilotwings",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": "=16.4.0"
  },
  "scripts": {
    "ng": "nx",
    "nx": "nx",
    "postinstall": "node ./decorate-angular-cli.js && ngcc --properties es2015 browser module main",
    "start": "nx run-many --target=serve-ssr --projects=pilotdb --parallel",
    "start.services": "docker compose up -d --remove-orphans",
    "build": "ng run pilotdb:server & ng run pilotdb:build",
    "test": "ng test",
    "lint": "nx workspace-lint && ng lint",
    "e2e": "ng e2e",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "nx migrate latest",
    "workspace-generator": "nx workspace-generator",
    "dep-graph": "nx dep-graph",
    "help": "nx help",
    "dev:ssr": "ng run pilotdb:serve-ssr",
    "serve:ssr": "node dist/pilotdb/server/main.js",
    "build:ssr": "ng build && ng run pilotdb:server",
    "prerender": "ng run pilotdb:prerender",
    "db.app.drop": "docker exec -it ibble-postgres psql -U localdev -d postgres -c \"DROP DATABASE IF EXISTS ibble;\"",
    "db.app.create": "docker exec -it ibble-postgres psql -U localdev -d postgres -c \"CREATE DATABASE ibble;\"",
    "db.app.reset": "npm run db.app.drop && npm run db.app.create && npm run db.app.migrate.local",
    "db.app.migrate": "APP_DB_MIGRATE_DIR=apps/pilotdb/migrations node -r dotenv/config node_modules/.bin/postgrator -c postgrator.js",
    "db.app.seed.dev": "APP_DB_MIGRATE_DIR=apps/pilotdb/migrations/seed-dev node -r dotenv/config node_modules/.bin/postgrator -c postgrator.js",
    "db.app.migrate.local": "npm run db.app.migrate && npm run db.app.seed.dev",
    "heroku-release": "APP_DB_MIGRATE_DIR=apps/pilotdb/migrations node -r dotenv/config node_modules/.bin/postgrator -c postgrator.js",
    "docker": "npx nx run-many --target=docker --all --parallel"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^12.1.3",
    "@angular/common": "^12.1.3",
    "@angular/compiler": "^12.1.3",
    "@angular/core": "^12.1.3",
    "@angular/forms": "^12.1.3",
    "@angular/platform-browser": "^12.1.3",
    "@angular/platform-browser-dynamic": "^12.1.3",
    "@angular/platform-server": "^12.1.3",
    "@angular/router": "^12.1.3",
    "@nguniversal/express-engine": "^12.1.0",
    "@nrwl/angular": "12.6.0",
    "class-transformer": "^0.4.0",
    "date-fns": "^2.22.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "multer": "^1.4.2",
    "pg": "^8.6.0",
    "postgres": "^2.0.0-beta.6",
    "postgrator": "^4.1.1",
    "rxjs": "~7.2.0",
    "tslib": "^2.3.0",
    "typescript-monads": "^6.0.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.1.3",
    "@angular-eslint/eslint-plugin": "~12.3.1",
    "@angular-eslint/eslint-plugin-template": "~12.3.1",
    "@angular-eslint/template-parser": "~12.3.1",
    "@angular/cli": "^12.1.3",
    "@angular/compiler-cli": "^12.1.3",
    "@angular/language-service": "^12.1.3",
    "@ngneat/tailwind": "^7.0.3",
    "@nguniversal/builders": "^12.1.0",
    "@nrwl/cli": "12.6.0",
    "@nrwl/cypress": "12.6.0",
    "@nrwl/eslint-plugin-nx": "12.6.0",
    "@nrwl/jest": "12.6.0",
    "@nrwl/linter": "12.6.0",
    "@nrwl/tao": "12.6.0",
    "@nrwl/workspace": "12.6.0",
    "@nx-tools/nx-docker": "^1.0.5",
    "@tailwindcss/aspect-ratio": "0.2.1",
    "@tailwindcss/forms": "0.3.3",
    "@tailwindcss/line-clamp": "0.2.1",
    "@tailwindcss/typography": "0.4.1",
    "@types/express": "^4.17.13",
    "@types/jest": "26.0.24",
    "@types/multer": "^1.4.7",
    "@types/node": "16.4.1",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "autoprefixer": "^10.3.1",
    "cypress": "^8.0.0",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "jest": "27.0.6",
    "jest-preset-angular": "9.0.5",
    "postcss": "^8.3.6",
    "postgrator-cli": "^4.0.0",
    "prettier": "^2.3.2",
    "tailwindcss": "^2.2.6",
    "ts-jest": "27.0.4",
    "ts-node": "~10.1.0",
    "typescript": "~4.3.5"
  }
}
